<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lynn.simplerecyclerview.MainActivity">

    <com.lynn.simplerecyclerview.colorselector.ColorPan
        android:id="@+id/l"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <com.lynn.simplerecyclerview.colorselector.ColorPan
        android:id="@+id/s"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/l"
        android:layout_marginTop="10dp"/>

    <com.lynn.simplerecyclerview.colorselector.ColorPan
        android:id="@+id/r"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/s"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="@dimen/dimen_40"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AAA"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="BBB"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="CCC"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="DDD"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="EEE"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="FFF"/>
    </LinearLayout>

    <com.lynn.simplerecyclerview.colorselector.RoundTextView
        android:id="@+id/color_l"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/s"/>

    <com.lynn.simplerecyclerview.colorselector.RoundTextView
        android:id="@+id/color_s"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@+id/l"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_80"
        android:layout_toRightOf="@+id/s"/>

    <com.lynn.simplerecyclerview.colorselector.RoundTextView
        android:id="@+id/color_r"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@+id/s"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_80"
        android:layout_toRightOf="@+id/s"/>

</RelativeLayout>